# Warn when there is a big PR
warn("Big PR") if git.lines_of_code > 500


# Slater config
slather.configure('TwilioVerify.xcodeproj', 'TwilioVerify', options: {
  workspace: 'TwilioVerify.xcworkspace',
  output_directory: "coverage",
  ci_service: :circleci,
  coverage_service: :terminal,
})

slather.notify_if_coverage_is_less_than(minimum_coverage: 80)
slather.notify_if_modified_file_is_less_than(minimum_coverage: 80)
slather.show_coverage